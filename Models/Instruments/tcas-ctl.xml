<!--
777-200 TCAS-ATC control 
-->

<PropertyList>
 <path>tcas-ctl.ac</path>

    <animation>
        <type>textranslate</type>
        <object-name>digit0</object-name>
        <property>instrumentation/transponder/id-code</property>
        <factor>0.0001</factor>
        <step>1000</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>digit1</object-name>
        <property>instrumentation/transponder/id-code</property>
        <factor>0.001</factor>
        <step>100</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    
    <animation>
        <type>textranslate</type>
        <object-name>digit2</object-name>
        <property>instrumentation/transponder/id-code</property>
        <factor>0.01</factor>
        <step>10</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>
    
    <animation>
        <type>textranslate</type>
        <object-name>digit3</object-name>
        <property>instrumentation/transponder/id-code</property>
        <factor>0.1</factor>
        <step>1</step>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>TCAS.knob</object-name>
        <object-name>IDT.btn</object-name>
        <property>instrumentation/transponder/mode-switch</property>
        <factor>30</factor>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.036</y-m>
            <z-m>-0.013</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>select</type>
        <object-name>digit0</object-name>
        <object-name>digit1</object-name>
        <object-name>digit2</object-name>
        <object-name>digit3</object-name>
        <condition>
            <greater-than>
                <property>systems/electrical/outputs/transponder</property>
                <value>15</value>
            </greater-than>
        </condition>
    </animation>

